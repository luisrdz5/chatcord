

    
  flower:
    image: mher/flower
    ports:
      - '5555:5555'
    depends_on: 
      - redis
    environment:
      - CELERY_BROKER_URL=redis://redis:6379/0
      - FLOWER_PORT=5555
      - FLOWER_BASIC_AUTH=root:jfsodf8erw




//enter to kafka container

docker exec -it kakfa /bin/sh

//create a topic using command line
kafka-topics.sh --create --zookeeper zookeeper:2181 --replication-factor 1 --partitions 1 --topic test Created topic test


//start a consumer using command line 
kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic test --from-beginning


//send a mesage to kafka using command line

kafka-console-producer.sh --broker-list localhost:9092 --topic test
